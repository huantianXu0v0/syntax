{
	"bsonType": "object",
	"required": ["title", "desc", "icon"],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"icon": {
			"bsonType": "string",
			"description": "图标，可以是Emoji(⚡️)或Iconfont类名或图片地址",
			"title": "图标"
		},
		"title": {
			"bsonType": "string",
			"description": "卡片标题",
			"title": "标题",
			"minLength": 2,
			"maxLength": 50
		},
		"desc": {
			"bsonType": "string",
			"description": "卡片详细描述",
			"title": "描述",
			"maxLength": 200
		},
		"sort": {
			"bsonType": "int",
			"description": "排序值，数字越小越靠前",
			"title": "排序",
			"defaultValue": 100
		},
		"status": {
			"bsonType": "int",
			"description": "状态：1上线，0下线",
			"title": "状态",
			"defaultValue": 1
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}