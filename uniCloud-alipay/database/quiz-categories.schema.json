{
	"bsonType": "object",
	"required": ["name", "status"],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"description": "分类名称，如 JavaSE 基础",
			"title": "分类名称"
		},
		"parent_id": {
			"bsonType": "string",
			"description": "父级ID，用于构建树状结构",
			"title": "父级分类",
			"foreignKey": "quiz-categories._id"
		},
		"icon": {
			"bsonType": "string",
			"description": "图标地址 (建议 svg 或 png)",
			"title": "图标"
		},
		"sort": {
			"bsonType": "int",
			"description": "排序权重，数字越大越靠前",
			"title": "排序",
			"defaultValue": 100
		},
		"status": {
			"bsonType": "bool",
			"description": "是否上架",
			"title": "状态",
			"defaultValue": true
		},
		"description": {
			"bsonType": "string",
			"description": "简短描述，显示在卡片上",
			"title": "描述"
		},
		"unlock_rules": {
			"bsonType": "object",
			"description": "解锁条件配置 (扩展字段)",
			"title": "解锁规则",
			"properties": {
				"pre_category_id": { "bsonType": "string" },
				"pass_score": { "bsonType": "int" }
			}
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"defaultValue": { "$env": "now" }
		}
	}
}